<span><h1 class="text-dark text-center ">My Vehicles</h1></span>

<div id="vehicles" class="container">
   <div class="row ">
      <% @vehicles.each do |vehicle| %>
     
     <div class="card col-3 bg-success mx-3 my-3">

      <div>
         <% if vehicle.image.attached? %>
         <div class="mt-2">
         <%= image_tag vehicle.image, style: "width: 100%; height: 200px"%>
         </div>
         <% end %>
     
         <strong>Model:</strong>
         <%= vehicle.model %>
         <br>
         <strong>Color:</strong>
         <%= vehicle.color %>
         <br>
         <strong>Fuel type:</strong>
         <%= vehicle.fuel_type %>
         <br>
         <strong>Price:</strong>
         <%= vehicle.price %> 
      </div>
      <hr>
      <div style="display: inline-flex; padding-bottom:8px;">
       
         <%= link_to "Show", vehicle, class:"text-white text-decoration-none" %> &nbsp;|&nbsp;
       

         <%= link_to "Edit", edit_vehicle_path(vehicle), class:"text-decoration-none text-white"%> &nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
       
         <%= button_to "Delete", vehicle, method: :delete, class:" text-danger " %>
      </div>
    
     </div>
    <% end %>

   </div>

</div>