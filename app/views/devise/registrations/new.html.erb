<h1>Sign up</h1>
<div class="container">
<% puts "hello" %>
<% if @user.errors.any?%>
    
    
     <% @user.errors.full_messages.each do |message|%>
       <h1> <%= message %></h1>
     <%end%>
<% end %>

<%= form_for(@user, url: user_registration_path(@user)) do |f| %>
  <%= render "devise/shared/error_messages"%>
 
  <div class="field w-25">
    <%= f.label :full_name %><br/>
    <%= f.text_field :full_name, autofocus: true %>
  </div>

  <div class="field w-25">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true %>
  </div>

  <div class="field w-25">
    <%= f.label :contact_no %><br />
    <%= f.number_field :contact_no, autofocus: true %>
  </div>

  <div class="field w-25">
    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field w-25">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field w-25">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions w-25">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
